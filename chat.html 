    <script src="https://www.gstatic.com/firebasejs/8.10.1/firebase-app.js"></script>
    <script src="https://www.gstatic.com/firebasejs/8.10.1/firebase-auth.js"></script>
    <script src="https://www.gstatic.com/firebasejs/8.10.1/firebase-database.js"></script>

    <script>
        // Firebase Config and Initialization (No changes)
        const firebaseConfig = { apiKey: "AIzaSyDLCkxploXTboSey53cjooGNljgFjQ8inU", authDomain: "on-chatting-ff4fc.firebaseapp.com", databaseURL: "https://on-chatting-ff4fc-default-rtdb.firebaseio.com", projectId: "on-chatting-ff4fc", storageBucket: "on-chatting-ff4fc.firebasestorage.app", messagingSenderId: "1090057464933", appId: "1:1090057464933:web:4d9aef5b306ffd5d522a8c", measurementId: "G-EQX3MGC574" };
        firebase.initializeApp(firebaseConfig);
        const auth = firebase.auth();
        const db = firebase.database();

        // NEW: More DOM Elements for Profile Page
        const profileAvatar = document.getElementById('profile-avatar');
        const profileDisplayName = document.getElementById('profile-display-name');
        const profileNameInput = document.getElementById('profile-name-input');
        const editProfileBtn = document.getElementById('edit-profile-btn');
        const saveProfileBtn = document.getElementById('save-profile-btn');
        const cancelEditBtn = document.getElementById('cancel-edit-btn');
        // Other DOM Elements from before
        const screens = document.querySelectorAll('.screen'); let currentUser = null, currentChatId = null, messageListener = null, chatListListener = null; function showScreen(screenId) { screens.forEach(s=>s.classList.remove('active')); document.getElementById(screenId)?.classList.add('active'); }

        // NEW: Helper function to update avatar
        function updateAvatar(name) {
            if (name && name.length > 0) {
                profileAvatar.textContent = name.charAt(0).toUpperCase();
            }
        }
        
        // NEW: Helper function to toggle edit mode
        function toggleProfileEdit(isEditing) {
            profileDisplayName.style.display = isEditing ? 'none' : 'block';
            profileNameInput.style.display = isEditing ? 'block' : 'none';
            
            editProfileBtn.style.display = isEditing ? 'none' : 'flex';
            saveProfileBtn.style.display = isEditing ? 'flex' : 'none';
            cancelEditBtn.style.display = isEditing ? 'flex' : 'none';
            
            if (isEditing) {
                profileNameInput.value = currentUser.displayName;
                profileNameInput.focus();
            }
        }
        
        // UPDATED: Auth state change to populate new fields
        auth.onAuthStateChanged(user => {
            if (user) {
                db.ref('users/' + user.uid).once('value', snapshot => {
                    currentUser = { uid: user.uid, email: user.email, ...snapshot.val() };
                    profileDisplayName.textContent = currentUser.displayName;
                    document.getElementById('profile-email').textContent = currentUser.email;
                    document.getElementById('user-code-display').textContent = currentUser.userCode;
                    updateAvatar(currentUser.displayName); // Update avatar
                    toggleProfileEdit(false); // Ensure it's in view mode
                    loadUserChats();
                    showScreen('home-screen');
                });
            } else {
                currentUser = null;
                if (chatListListener) chatListListener.off();
                document.getElementById('chat-list').innerHTML = '';
                showScreen('login-screen');
            }
        });

        // NEW: Event Listeners for Profile Edit buttons
        editProfileBtn.addEventListener('click', () => toggleProfileEdit(true));
        cancelEditBtn.addEventListener('click', () => toggleProfileEdit(false));
        saveProfileBtn.addEventListener('click', () => {
            const newName = profileNameInput.value.trim();
            if (newName === '' || newName === currentUser.displayName) {
                toggleProfileEdit(false);
                return;
            }
            db.ref('users/' + currentUser.uid).update({ displayName: newName })
                .then(() => {
                    currentUser.displayName = newName;
                    profileDisplayName.textContent = newName;
                    updateAvatar(newName);
                    toggleProfileEdit(false);
                    alert('Profile updated successfully!');
                })
                .catch(err => alert('Error: ' + err.message));
        });


        // --- ALL OTHER JS CODE REMAINS THE SAME (Login, Signup, Chat Logic etc.) ---
        // I've omitted it here for brevity, but you can use the script from the previous complete answer.
        // Make sure to include all the other functions like loadUserChats, openChatScreen, etc.
        document.getElementById('login-form').addEventListener('submit', e => { e.preventDefault(); auth.signInWithEmailAndPassword(e.target['login-email'].value, e.target['login-password'].value).catch(err => alert(err.message)); });
        document.getElementById('signup-form').addEventListener('submit', e => { e.preventDefault(); const name = e.target['signup-name'].value; const email = e.target['signup-email'].value; const pass = e.target['signup-password'].value; auth.createUserWithEmailAndPassword(email, pass).then(cred => { const userCode = cred.user.uid.substring(0, 6).toUpperCase(); db.ref('users/' + cred.user.uid).set({ displayName: name, email: email, userCode: userCode }); }).catch(err => alert(err.message)); });
        document.getElementById('logout-btn').addEventListener('click', () => auth.signOut());
        document.getElementById('go-to-signup').addEventListener('click', () => showScreen('signup-screen')); document.getElementById('go-to-login').addEventListener('click', () => showScreen('login-screen')); document.getElementById('home-profile-icon').addEventListener('click', () => showScreen('profile-screen')); document.getElementById('back-to-home-from-profile').addEventListener('click', () => showScreen('home-screen')); document.getElementById('back-to-home').addEventListener('click', () => { if (messageListener) db.ref('chats/' + currentChatId).off('child_added', messageListener); showScreen('home-screen'); });
        function loadUserChats() { const chatListEl = document.getElementById('chat-list'); const noChatsMsgEl = document.getElementById('no-chats-message'); chatListEl.innerHTML = ''; chatListEl.appendChild(noChatsMsgEl); noChatsMsgEl.style.display = 'block'; const userChatsRef = db.ref(`users/${currentUser.uid}/chats`); chatListListener = userChatsRef.on('child_added', snapshot => { noChatsMsgEl.style.display = 'none'; const chatInfo = snapshot.val(); const chatId = snapshot.key; const listItem = document.createElement('div'); listItem.className = 'chat-list-item'; listItem.innerHTML = `<div class="chat-list-item-avatar">${chatInfo.partnerName.charAt(0).toUpperCase()}</div><div class="chat-list-item-name">${chatInfo.partnerName}</div>`; listItem.addEventListener('click', () => openChatScreen(chatInfo.partnerName, chatId)); chatListEl.appendChild(listItem); }); }
        document.getElementById('start-new-chat').addEventListener('click', () => alert('This is a placeholder. Logic to show modal should be here.'));
        function openChatScreen(partnerName, chatId) { currentChatId = chatId; document.getElementById('chat-header-title').textContent = partnerName; const chatContent = document.getElementById('chat-screen-content'); chatContent.innerHTML = ''; showScreen('chat-screen'); messageListener = db.ref('chats/' + chatId).orderByChild('timestamp').on('child_added', snapshot => { const msg = snapshot.val(); const msgDiv = document.createElement('div'); msgDiv.className = 'message ' + (msg.senderId === currentUser.uid ? 'sent' : 'received'); msgDiv.textContent = msg.text; chatContent.appendChild(msgDiv); chatContent.scrollTop = chatContent.scrollHeight; }); }
        document.getElementById('chat-form').addEventListener('submit', e => { e.preventDefault(); const chatInput = document.getElementById('chat-input'); const text = chatInput.value.trim(); if (text === '') return; db.ref('chats/' + currentChatId).push({ text: text, senderId: currentUser.uid, timestamp: firebase.database.ServerValue.TIMESTAMP }); chatInput.value = ''; });
        document.getElementById('user-code-display').addEventListener('click', e => { navigator.clipboard.writeText(e.target.textContent).then(() => alert('User Code copied!')); });
    </script>
